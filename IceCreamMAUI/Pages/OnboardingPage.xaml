<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IceCreamMAUI.Pages.OnboardingPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto" Padding="0, 0, 0, 40">
        <VerticalStackLayout Grid.Row="0" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
            <Image  Source="ice_cream"
                    HeightRequest="250"
                    WidthRequest="250"
                    Aspect="AspectFit"/>
            <Label
                FontAttributes="Bold"
                Text="Welcome"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Label
                 FontAttributes="Bold"
                 Text="MAUI ICE CREAMS"
                 FontSize="25"
                 HorizontalOptions="Center"/>

            <Label
                 Text="Home of Delicious Ice Creams"
                 FontSize="18"
                 HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center">
            <Button Text="Signup"></Button>

            <Button Text="Signin"></Button>
        </VerticalStackLayout>
        
        
    </Grid>
 
</ContentPage>

